@model ExpenseTracker.Models.Expense

@{
    ViewBag.Title = "Delete Expense";
}

<h2>Are you sure you want to delete this expense?</h2>

<p>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Amount:</strong> @Model.Amount <br />
    <strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd") <br />
    <strong>Category:</strong> @Model.Category.Name
</p>

@using (Html.BeginForm("DeleteConfirmed", "Expense", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
}

<a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
